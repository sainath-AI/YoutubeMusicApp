<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/black"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="@dimen/dp_10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvImageView"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="@dimen/dp_26dp">

            <ImageView
                android:id="@+id/ivSinger"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvSingerName"
            android:paddingLeft="@dimen/dp_6dp"
            android:layout_below="@+id/cvImageView"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_18sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvSingerSubs"
            android:paddingLeft="@dimen/dp_6dp"
            android:layout_below="@+id/tvSingerName"
            android:textColor="#989494"
            android:textSize="@dimen/sp_14sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>