<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ExploreFragment">

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_20dp"
        android:id="@+id/rlPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:paddingLeft="@dimen/dp_28dp"
            android:layout_marginTop="@dimen/dp_3dp"
            android:drawableStart="@drawable/ic_music_note"
            android:drawablePadding="@dimen/dp_14dp"
            android:id="@+id/tvNewReleases"
            android:text="@string/new_releases"
            android:paddingRight="140dp"
            android:textSize="@dimen/sp_24sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn1"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/tvNewReleases"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:padding="@dimen/dp_6dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingLeft="@dimen/dp_28dp"
            android:layout_below="@id/tvNewReleases"
            android:layout_marginTop="@dimen/dp_14dp"
            android:drawableStart="@drawable/ic_show_chart"
            android:drawablePadding="@dimen/dp_14dp"
            android:id="@+id/tvCharts"
            android:text="Charts"
            android:paddingRight="220dp"
            android:textSize="@dimen/sp_24sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn2"
            android:layout_below="@id/tvNewReleases"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/tvNewReleases"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_14dp"
            android:padding="@dimen/dp_6dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:paddingLeft="@dimen/dp_28dp"
            android:layout_below="@id/tvCharts"
            android:layout_marginTop="@dimen/dp_14dp"
            android:drawableStart="@drawable/ic_mood"
            android:drawablePadding="@dimen/dp_14dp"
            android:id="@+id/tvMoods"
            android:text="Moods &#38; genres"
            android:paddingRight="120dp"
            android:layout_marginBottom="@dimen/dp_24dp"
            android:textSize="@dimen/sp_24sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/btn3"
            android:layout_below="@id/tvCharts"
            android:src="@drawable/ic_arrow_right"
            android:layout_width="wrap_content"
            android:layout_toEndOf="@+id/tvNewReleases"
            android:layout_alignParentEnd="true"
            android:background="@android:color/transparent"
            android:layout_marginTop="@dimen/dp_14dp"
            android:padding="@dimen/dp_6dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:id="@+id/view2"
        android:layout_marginLeft="@dimen/dp_4dp"
        android:layout_marginRight="@dimen/dp_4dp"
        android:background="#393838"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>